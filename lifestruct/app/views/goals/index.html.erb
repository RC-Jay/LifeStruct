<script>
$(document).on("click", ".add-goal-button", function(e) {
  var btnid = $(this).attr('id');
  var parent_id = btnid.split("-")[1];
  $('#goal_parent_id').attr('value', parent_id);
  console.log(parent_id);
});

function fix()
{
    var el = this;
    var par = el.parentNode;
    var next = el.nextSibling;
    par.removeChild(el);
    setTimeout(function() {par.insertBefore(el, next);}, 0)
}

</script>

  <h2> All Goals </h2>
  <ul class="goals">
    <% @root_goals.each do |goal| %>
      <%= render 'goaly', goal: goal %>
    <% end %>
  </ul>
